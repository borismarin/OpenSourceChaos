<Lems>

<Include url="https://raw.githubusercontent.com/borismarin/OpenSourceChaos/geppetto_tests/BaseUnits.xml"/>
<Include url="https://raw.githubusercontent.com/borismarin/OpenSourceChaos/geppetto_tests/SingleSimulation.xml"/>
<Include url="https://raw.githubusercontent.com/borismarin/OpenSourceChaos/geppetto_tests/SimplePendulum.xml"/>

<Target component="sim1"/>

<SimplePendulum id="pend" l="1m" m="1kg" g="1m_per_s2"
    theta_0="1.0"  p_0="0kg_m2_per_s"/>

<Simulation id="sim1" length="100s" step="0.1s" target="pend">

    <Display id="d1" title="theta timeseries"
        timeScale="1s" xmin="0" xmax="100" ymin="-2" ymax="2">
        <Line id ="th" quantity="theta" scale="1" color="#ff0000" timeScale="1s"/>
    </Display>
    
    <Display id="d2" title="p timeseries"
        timeScale="1s" xmin="0" xmax="100" ymin="-2" ymax="2">
        <Line id ="p" quantity="p" scale="1" color="#0000ff" timeScale="1s"/>
    </Display>
    
</Simulation>

</Lems>
